resource "aws_eventbridge_rule" "example" {
  name        = "eio-destruct-ops-notify-team-sqs-archive"
  description = "notify operations team of sqs archival events"
  event_bus_name = "eio-${var.env}-operations"

  event_pattern = <<EOF
{
  "source": ["evernorth.evir.operations"],
  "detail-type": ["messages.archived"],
  "detail": {
    "archiveCount": [{"numeric": [">", 0]}]
  }
}
EOF
}

resource "aws_eventbridge_target" "example" {
  rule      = aws_eventbridge_rule.example.name
  target_id = "lambda-eio-${var.env}-notify_team-pipeline-lambda"
  arn       = "arn:aws:lambda:<REGION>:<ACCOUNT_ID>:function/eio-${var.env}-notify_team-pipeline-lambda"
}

resource "aws_eventbridge_policy" "example" {
  name        = "eio-destruct-ops-notify-team-sqs-archive-policy"
  event_bus  = aws_eventbridge_rule.example.event_bus_name
  statement {
    action = "lambda:InvokeFunction"
    condition {
      key   = "aws:RequestTag/Environment"
      test  = "StringEquals"
      values = ["destruct"]
    }
    principal = "events.amazonaws.com"
    effect    = "Allow"
  }
}

resource "aws_eventbridge_target_policy" "example" {
  target_id   = aws_eventbridge_target.example.id
  policy_json = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Sid    = "InvokePermission",
        Effect = "Allow",
        Principal = {
          Service = "events.amazonaws.com"
        },
        Action = "lambda:InvokeFunction",
      },
    ],
  })
}

resource "aws_eventbridge_rule_target" "example" {
  rule_id = aws_eventbridge_rule.example.id
  target_id = aws_eventbridge_target.example.id
}

resource "aws_eventbridge_rule_event_bus" "example" {
  name = aws_eventbridge_rule.example.event_bus_name
}

resource "aws_eventbridge_archive" "example" {
  name       = "example"
  source_arn = aws_eventbridge_rule.example.arn
}

resource "aws_lambda_permission" "example" {
  statement_id  = "AllowExecutionFromEventBridge"
  action        = "lambda:InvokeFunction"
  function_name = "eio-${var.env}-notify_team-pipeline-lambda"
  principal     = "events.amazonaws.com"
  source_arn    = aws_eventbridge_rule.example.arn
}

